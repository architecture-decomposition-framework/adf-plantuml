'main value is shade==1. Other values (0, 2, 3) are calculated by 
'in-/decreasing lightness in HSL model
!function colorSWRT($shade)
!if $shade == 0
    !return "#FFF7E0"
!elseif $shade == 1
    !return "#FFF2CC"
!elseif $shade == 2
    !return "#FFEAAD"
!elseif $shade == 3
    !return "#FFE28F"
!else
    !return "#FFF2CC"
!endif
!endfunction

!function colorSWDT($shade)
!if $shade == 0
    !return "#CAE7BB"
!elseif $shade == 1
    !return "#B9E0A5"
!elseif $shade == 2
    !return "#A6D88D"
!elseif $shade == 3
    !return "#95D076"
!else
    !return "#FFF2CC"
!endif
!endfunction

!function colorENRT($shade)
!if $shade == 0
    !return "#FFF3E5"
!elseif $shade == 1
    !return "#FFE6CC"
!elseif $shade == 2
    !return "#FFDAB3"
!elseif $shade == 3
    !return "#FFCD99"
!else
    !return "#FFF2CC"
!endif
!endfunction

!$col_tech = "#F8CECC"
!$col_notes = "#FFFFFF"

'================ COMMON ELEMENTS =================

!unquoted procedure ADFRole($id, $name) 
    actor "**$name**" <<Role>> as $id colorSWRT(1)
!endprocedure

!unquoted procedure ADFTechnology($id, $name)
    rectangle "**$name**" <<Technology>> as $id $col_tech
!endprocedure

!unquoted procedure ADFOutsidePort($id)
    rectangle " " <<Outside Port>> as $id
!endprocedure

!unquoted procedure ADFRelation($from, $to, $type, $description = "", $direction = "")
    !local $descriptionWithNewline = ""
    !if $description != ""
        !local $descriptionWithNewline = "\n" + $description
    !endif
    $from .$direction.> $to : <<$type>>$descriptionWithNewline
!endprocedure

